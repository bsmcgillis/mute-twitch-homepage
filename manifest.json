{
	"manifest_version": 2,
  	"name": "Mute Twitch Homepage",
    "description": "This extension will mute the video player on Twitch's homepage",
  	"version": "1.0",

  	"browser_action": {
    	"default_icon": "mute-icon.png",
    	"default_popup": "mute.html"
  	},
  	"permissions": [
	    "activeTab",
    	"storage",
        "http://*/*",
        "https://*/*"
  	],
  	"content_scripts": [
	  	{
			"matches": ["http://*/*", "https://*/*"],
	 	   	"js": ["mute.js"],
	 	   	"run_at": "document_end"
	  	}
	],
	"background": {
		"scripts": ["mute-bg.js"]
	}
}